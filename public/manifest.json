{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0.0",
  "description": "The simplest Vue browser extension for converting text to QR codes.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "QR Code Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "96": "icons/icon96.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "96": "icons/icon96.png"
  },
  "permissions": ["storage", "clipboardWrite"]
}
